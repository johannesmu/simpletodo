doctype html
html
  head
    meta(name='viewport',content='width=device-width,initial-scale=1.0')
    title="simple to do list"
    link(rel='stylesheet',href='css/styles.css')
  body
    .app-view
      header.header
        img(src='images/icon.png',class='logo')
      main
        .container
          ul.task-list
      footer.footer
        form(id='input')
          .input-bg
            input.text-box(type='text' placeholder='add task')
          .button-bg
            button.add-button="+"
    script(src='cordova.js')
    script(src='js/jquery-3.1.0.min.js')
    script(src='js/main.js')
